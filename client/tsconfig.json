{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "../dist/",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types/"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "../node_modules/*",
    "../dist",
    "../server/*"
  ]
}
